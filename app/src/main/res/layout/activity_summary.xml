                    </LinearLayout>
                </LinearLayout>


            </HorizontalScrollView>

            <TextView
                android:id="@+id/tv_pompa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chart berdasarkan jenis pompa"
                android:textSize="20sp"
                android:fontFamily="@font/poppinsbold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hv_lokasi"
                android:layout_marginTop="40dp"
                android:gravity="center"
                />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_pompa"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/pc_jenis_submersible"
                            android:layout_width="@dimen/pieChart"
                            android:layout_height="@dimen/pieChart"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:weightSum="2"
                            >
                            <TextView
                                android:id="@+id/tv_mati_submersible"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="mati"
                                android:drawableStart="@drawable/status_mati"
                                android:drawableTint="@color/red"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:textColor="@color/red"
                                />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/pc_jenis_jetpump"
